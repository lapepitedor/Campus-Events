@using Campus_Events.ViewModels
@model PasswordForgottenViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Campus Events - Password Forgotten";
}

<div id="password-forgotten-page" class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="text-center mb-4 text-dark">Forgot Password</h4>
                    <p class="text-center text-muted mb-4">
                        No worries! Enter your email below, and we’ll send you instructions to reset your password.
                    </p>

                    <!-- Formulaire -->
                    <form method="post" action="/Authentication/SendPasswordResetMail">
                        <!-- Résumé des erreurs générales -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Champ Email -->
                        <div class="mb-3">
                            <label asp-for="EMail" class="form-label fw-bold">Email</label>
                            <input class="form-control p-2" asp-for="EMail" placeholder="Enter your email" />
                            <span asp-validation-for="EMail" class="text-danger"></span>
                        </div>

                        <!-- Bouton d'envoi -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary p-2 fw-bold">Send Reset Link</button>
                        </div>
                    </form>

                    <!-- Retour au login -->
                    <div class="text-center mt-3">
                        <p class="text-muted">
                            Back to <a asp-action="Login" asp-controller="Authentication" class="text-primary fw-bold">Login</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

