@model PagedResult<Campus_Events.Models.Event>

<div class="container">
    <!-- Menu de navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Tableau de Bord</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="UserDashboard">Événements Disponibles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="RegisteredEvents" asp-route-userId="@User.Identity.Name">Événements Inscrits</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Titre de la section -->
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <!-- Affichage des événements -->
    <div class="row">
        @foreach (var obj in Model.Items)
        {
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@obj.Title</h5>
                        <p class="card-subtitle text-muted mb-2">
                            <i class="fas fa-calendar-alt"></i> @obj.Date.ToString("dd/MM/yyyy HH:mm")
                        </p>
                        <p class="card-text"><strong>Lieu :</strong> @obj.Location</p>
                        <p>
                            <span class="badge @(obj.IsActive ? "bg-success" : "bg-secondary")">
                                @(obj.IsActive ? "Actif" : "Inactif")
                            </span>
                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">
                                <i class="fas fa-users"></i> @obj.RegisteredSeats / @obj.TotalSeats
                            </span>
                            <a asp-action="EventDetails" asp-route-id="@obj.ID" class="btn btn-primary btn-sm">
                                Détails <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>