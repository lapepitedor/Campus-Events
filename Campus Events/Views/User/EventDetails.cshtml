@model Campus_Events.Models.Event

@{
    ViewData["Title"] = "EventDetails";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2><strong>@Model.Title</strong></h2>
            <p >
                <strong>Date</strong><i class="fas fa-calendar-alt"></i> @Model.Date.ToString("dd/MM/yyyy HH:mm")
            </p>
            <p><strong>Location :</strong> @Model.Location</p>
            <p><strong>Description :</strong> @Model.Description</p>
            <p><strong>AvailableSeats :</strong> @Model.AvailableSeats</p>
            <p><strong>Number of registrations :</strong> @Model.RegisteredSeatsCount</p>

            <div class="mt-4">
                <form asp-action="Register" method="post" class="d-inline">
                    <input type="hidden" name="eventId" value="@Model.ID" />
                    <input type="hidden" name="userId" value="@User.Claims.FirstOrDefault(x=> x.Type == "ID").Value" />
                    <button type="submit" class="btn btn-success me-2">
                        Subscribe <i class="fas fa-check-circle"></i>
                    </button>
                </form>

                <form asp-action="Unregister" method="post" class="d-inline">
                    <input type="hidden" name="eventId" value="@Model.ID" />
                    <input type="hidden" name="userId" value="@User.Claims.FirstOrDefault(x=> x.Type == "ID").Value" />
                    <button type="submit" class="btn btn-danger">
                        Unsubscribe <i class="fas fa-times-circle"></i>
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>

<div class="text-center">
    <a asp-controller="User" asp-action="ReturnToDashboard" class="text-decoration-none mt-3">
        Back to Dashboard
    </a>
</div>



