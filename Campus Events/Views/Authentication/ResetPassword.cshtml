@using Campus_Events.ViewModels
@model PasswordResetViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Campus Events - Password Reset";
}

<div id="reset-password-page" class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="text-center mb-4 text-dark">Reset Password</h4>
                    <form method="post" action="/Authentication/ResetPassword">
                        <input type="hidden" asp-for="Token">

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold">New Password</label>
                            <input class="form-control p-2" asp-for="Password" placeholder="Enter your new password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PasswordRepeat" class="form-label fw-bold">Confirm Password</label>
                            <input class="form-control p-2" asp-for="PasswordRepeat" placeholder="Confirm your new password">
                            <span asp-validation-for="PasswordRepeat" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 p-2 fw-bold">Reset Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
